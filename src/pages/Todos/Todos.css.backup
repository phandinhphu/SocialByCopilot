.todos-container {
  padding: 20px 0;
}

.todos-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  padding: 0 10px;
}

.todos-header h1 {
  margin: 0;
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.create-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 24px;
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
  color: white;
  border: none;
  border-radius: 25px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(155, 89, 182, 0.3);
}

.create-btn:hover {
  box-shadow: 0 6px 20px rgba(155, 89, 182, 0.4);
  transform: translateY(-2px);
}

.todos-stats {
  display: flex;
  gap: 30px;
  margin-bottom: 20px;
  padding: 0 10px;
  flex-wrap: wrap;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #666;
  font-weight: 500;
  padding: 10px 15px;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.stat svg {
  color: #9b59b6;
}

.stat.completed svg {
  color: #27ae60;
}

.stat.pending svg {
  color: #e67e22;
}

.todos-filters {
  display: flex;
  gap: 20px;
  margin-bottom: 30px;
  padding: 0 10px;
  flex-wrap: wrap;
}

.filter-group {
  display: flex;
  align-items: center;
  gap: 10px;
  background: rgba(255, 255, 255, 0.9);
  padding: 12px 16px;
  border-radius: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.filter-group svg {
  color: #9b59b6;
}

.filter-select {
  border: none;
  background: transparent;
  font-size: 1rem;
  color: #333;
  cursor: pointer;
  min-width: 120px;
}

.filter-select:focus {
  outline: none;
}

.todos-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
  padding: 0 10px;
}

.todo-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15px;
  padding: 20px;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.todo-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
}

.todo-card.completed {
  background: rgba(46, 204, 113, 0.1);
}

.todo-card.completed::before {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
}

.todo-card.completed .todo-title {
  text-decoration: line-through;
  opacity: 0.7;
}

.todo-card:hover {
  box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
}

.todo-content {
  display: flex;
  align-items: center;
  gap: 15px;
  flex: 1;
}

.todo-checkbox {
  background: none;
  border: none;
  cursor: pointer;
  color: #9b59b6;
  transition: all 0.2s ease;
  padding: 0;
}

.todo-card.completed .todo-checkbox {
  color: #27ae60;
}

.todo-info {
  flex: 1;
}

.todo-title {
  margin: 0 0 8px 0;
  font-size: 1.1rem;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.todo-meta {
  display: flex;
  align-items: center;
  gap: 15px;
}

.todo-user {
  color: #666;
  font-size: 0.9rem;
  font-weight: 500;
}

.todo-status {
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 0.8rem;
  font-weight: 600;
}

.todo-status.completed {
  background: rgba(39, 174, 96, 0.2);
  color: #27ae60;
}

.todo-status.pending {
  background: rgba(230, 126, 34, 0.2);
  color: #e67e22;
}

.todo-actions {
  display: flex;
  gap: 8px;
}

.todo-actions button {
  padding: 8px;
  background: rgba(155, 89, 182, 0.1);
  border: none;
  border-radius: 8px;
  cursor: pointer;
  color: #9b59b6;
  transition: all 0.2s ease;
}

.todo-actions button:hover {
  background: rgba(155, 89, 182, 0.2);
}

.todo-actions button.delete-btn {
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
}

.todo-actions button.delete-btn:hover {
  background: rgba(231, 76, 60, 0.2);
}

.no-todos {
  text-align: center;
  padding: 60px 20px;
  color: #666;
}

.no-todos svg {
  color: #9b59b6;
  margin-bottom: 20px;
}

.no-todos h3 {
  margin: 0 0 10px 0;
  font-size: 1.5rem;
  font-weight: 600;
}

.no-todos p {
  margin: 0;
  font-size: 1rem;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(5px);
}

.modal-content {
  background: white;
  border-radius: 20px;
  padding: 30px;
  max-width: 500px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
}

.modal-content h2 {
  margin: 0 0 20px 0;
  font-size: 1.5rem;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.form-input {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid #e1e5e9;
  border-radius: 10px;
  font-size: 1rem;
  margin-bottom: 15px;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  outline: none;
  border-color: #9b59b6;
  box-shadow: 0 0 0 3px rgba(155, 89, 182, 0.1);
}

.form-actions {
  display: flex;
  gap: 15px;
  justify-content: flex-end;
  margin-top: 20px;
}

.form-actions button {
  padding: 10px 20px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.form-actions button[type="button"] {
  background: #e1e5e9;
  color: #666;
}

.form-actions button[type="button"]:hover {
  background: #d1d5d9;
}

.form-actions button[type="submit"] {
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
  color: white;
}

.form-actions button[type="submit"]:hover {
  box-shadow: 0 4px 15px rgba(155, 89, 182, 0.3);
}

.form-actions button:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

.error {
  text-align: center;
  color: #e74c3c;
  font-size: 1.1rem;
  margin: 50px 0;
  padding: 20px;
  background: rgba(231, 76, 60, 0.1);
  border-radius: 10px;
  border: 1px solid rgba(231, 76, 60, 0.2);
}

@media (max-width: 768px) {
  .todos-header {
    flex-direction: column;
    gap: 15px;
    align-items: stretch;
  }
  
  .todos-header h1 {
    font-size: 2rem;
    text-align: center;
  }
  
  .todos-stats {
    justify-content: center;
    gap: 15px;
  }
  
  .todos-filters {
    flex-direction: column;
    gap: 15px;
  }
  
  .todo-card {
    flex-direction: column;
    align-items: stretch;
    gap: 15px;
  }
  
  .todo-content {
    gap: 12px;
  }
  
  .todo-actions {
    align-self: flex-end;
  }
  
  .modal-content {
    margin: 20px;
    padding: 20px;
  }
}

@media (max-width: 480px) {
  .todos-container {
    padding: 10px 0;
  }
  
  .todos-header h1 {
    font-size: 1.8rem;
  }
  
  .create-btn {
    padding: 10px 20px;
    font-size: 0.9rem;
  }
  
  .todos-stats {
    gap: 10px;
  }
  
  .stat {
    padding: 8px 12px;
    font-size: 0.9rem;
  }
  
  .todo-card {
    padding: 15px;
  }
  
  .todo-meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }
  
  .todo-actions button {
    padding: 6px;
  }
}
